{
    "python.pythonPath": "conda-env/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": ["--reports", "12", "--disable-msg", "I0011"],
    "python.linting.flake8Enabled": false,
    "python.linting.flake8Args": ["--ignore=E24,W504", "--verbose"],
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": ["--ignore=D400", "--ignore=D4"],
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "autopep8",
    "python.testing.pytestEnabled": true,
    "python.testing.nosetestsEnabled": false,
    "qtForPython.path.designer": "${env:HOME}/Qt/5.12.3/clang_64/bin/Designer",
    "qtForPython.path.linguist": "${env:HOME}/Qt/5.12.3/clang_64/bin/Linguist",
    "qtForPython.path.lrelease": "${env:HOME}/Qt/5.12.3/clang_64/bin/lrelease",
    "qtForPython.path.pylupdate": "",
    "qtForPython.path.pyrcc": "",
    "qtForPython.path.pyuic": "",
    "qtForPython.path.qmlscene": "${env:HOME}/Qt/5.12.3/clang_64/bin/qmlscene --verbose ${file}",
    "pyside2-vsc.designer-creator.path": "",
    "pyside2-vsc.rcc.cmd": "pyside2-rcc",
    "pyqt-integration.linguist.cmd": "linguist",
    "pyside2-vsc.uic.cmd": "pyside2-uic",

    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/*.pyc": true,
        "**/*.min.js": true,
        "**/*.js.map": true,
        "htmlcov": true,
        "build": true,
        "*.log": true,
        "*.egg-info": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

    "editor.acceptSuggestionOnEnter": "on",

    "editor.quickSuggestionsDelay": 10,

    "editor.suggestOnTriggerCharacters": true,

    "editor.tabCompletion": "on",

    "editor.suggest.localityBonus": true,

    "editor.suggestSelection": "recentlyUsed",

    "editor.wordBasedSuggestions": true,

    "editor.parameterHints.enabled": true

}
